<h2><%= @guest.name %></h2>

<h3>List of Rooms</h3>
  <% @guest.rooms.each do |room| %>
    <p>Suite: <%= room.suite %><br>
    <p>Nightly Rate: $<%= room.rate %><br>
    <p>Hotel: <%= room.hotel.name %><br>
  <% end %>

<h4>Add a room to <%= @guest.name %></h4>
  <%= form_with url: "/guests/#{@guest.id}", method: :post do |form|%>
    <%= form.label :room_id, "Room ID" %>
    <%= form.number_field :room_id %>
    <%= form.submit "Add Room" %>
  <% end %>